{
  "name": "financial-management-phuc-dat",
  "version": "1.0.0",
  "description": "Financial Management System - Phuc Dat",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm run install:all && npm run setup:env",
    "setup:env": "echo 'Please copy env.example files and configure your environment variables'",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && python -m pytest",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && python -m flake8 .",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "keywords": [
    "financial-management",
    "fastapi",
    "nextjs",
    "supabase",
    "business-management"
  ],
  "author": "Phuc Dat",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
